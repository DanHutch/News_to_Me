<!DOCTYPE html>
<html>
  <head>
    <title>News To Me</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <div class="main-header">
      <% if !current_page?('/') %>
        <%= link_to 'NewsFeed', root_path, class: "cta-button"  %>
      <% else %>
        <%= link_to 'NewsFeed', root_path, class: "disabled-button"  %>
      <% end %>

      <h1 class="title">
        News to Me
      </h1>
      <% if !current_page?('/favorites') %>
        <%= link_to 'Favorites', favs_path, class: "cta-button"  %>
      <% else %>
        <%= link_to 'Favorites', favs_path, class: "disabled-button" %>
      <% end %>
    </div>
    <div class="flash-message">
      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, class: name %>
      <% end %>
    </div>
    <%= yield %>
  </body>
  <footer class="main-footer">
    <p class="attribution">
      Powered By <%= link_to 'NewsAPI.org', "https://newsapi.org" %>
    </p>
  </footer>
</html>
